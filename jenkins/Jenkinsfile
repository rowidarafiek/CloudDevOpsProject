@Library('clouddevops-shared-library') _

pipeline {
    agent any
    
    environment {
        // DockerHub credentials (stored in Jenkins)
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-cred')
        
        // Image details
        DOCKERHUB_USERNAME = 'rowidarafiek'
        IMAGE_NAME = "${DOCKERHUB_USERNAME}/clouddevops-app"
        IMAGE_TAG = "${BUILD_NUMBER}"
        
        // Git credentials
        GIT_CREDENTIALS = credentials('github-cred')
    }
    
    options {
        // Keep only last 10 builds
        buildDiscarder(logRotator(numToKeepStr: '10'))
        
        // Timeout after 30 minutes
        timeout(time: 30, unit: 'MINUTES')
        
        // Disable concurrent builds
        disableConcurrentBuilds()
    }
    
    stages {
        stage('Checkout') {
            steps {
                script {
                    echo "========== Stage: Checkout =========="
                    echo "Checking out source code..."
                    checkout scm
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    echo "========== Stage: Build Image =========="
                    buildDockerImage(IMAGE_NAME, IMAGE_TAG)
                }
            }
        }
        
        stage('Scan Image with Trivy') {
            steps {
                script {
                    echo "========== Stage: Security Scan =========="
                    scanImage(IMAGE_NAME, IMAGE_TAG)
                }
            }
        }
        
        stage('Push to DockerHub') {
            steps {
                script {
                    echo "========== Stage: Push Image =========="
                    pushDockerImage(IMAGE_NAME, IMAGE_TAG)
                }
            }
        }
        
        stage('Delete Local Image') {
            steps {
                script {
                    echo "========== Stage: Cleanup =========="
                    deleteDockerImage(IMAGE_NAME, IMAGE_TAG)
                }
            }
        }
        
        stage('Update Kubernetes Manifests') {
            steps {
                script {
                    echo "========== Stage: Update Manifests =========="
                    updateManifests(IMAGE_NAME, IMAGE_TAG)
                }
            }
        }
        
        stage('Push Manifests to Git') {
            steps {
                script {
                    echo "========== Stage: Push to Git =========="
                    pushManifests()
                }
            }
        }
    }
    
    post {
        success {
            echo '========== Pipeline SUCCESS =========='
            echo "✅ Image built: ${IMAGE_NAME}:${IMAGE_TAG}"
            echo "✅ Image pushed to DockerHub"
            echo "✅ Manifests updated and pushed to Git"
            echo "✅ ArgoCD will auto-sync the deployment"
        }
        failure {
            echo '========== Pipeline FAILED =========='
            echo "❌ Build failed at stage: ${env.STAGE_NAME}"
        }
        always {
            echo '========== Pipeline Complete =========='
            cleanWs()
        }
    }
}
